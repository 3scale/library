{
    "labels": {
        "template": "mongodb-ephemeral-template"
    },
    "metadata": {
        "annotations": {
            "openshift.io/display-name": "MongoDB (Ephemeral)",
            "iconClass": "icon-mongodb",
            "tags": "database,mongodb",
            "description": "MongoDB database service, without persistent storage. For more information about using this template, including OpenShift considerations, see https://github.com/sclorg/mongodb-container/blob/master/3.2/README.md.\n\nWARNING: Any data stored will be lost upon pod destruction. Only use this template for testing"
        },
        "creationTimestamp": null,
        "name": "mongodb-ephemeral"
    },
    "kind": "Template",
    "message": "The following service(s) have been created in your project: ${DATABASE_SERVICE_NAME}.\n\n       Username: ${MONGODB_USER}\n       Password: ${MONGODB_PASSWORD}\n  Database Name: ${MONGODB_DATABASE}\n Connection URL: mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${DATABASE_SERVICE_NAME}/${MONGODB_DATABASE}\n\nFor more information about using this template, including OpenShift considerations, see https://github.com/sclorg/mongodb-container/blob/master/3.2/README.md.",
    "apiVersion": "v1",
    "parameters": [
        {
            "value": "512Mi",
            "displayName": "Memory Limit",
            "name": "MEMORY_LIMIT",
            "description": "Maximum amount of memory the container can use."
        },
        {
            "value": "openshift",
            "displayName": "Namespace",
            "name": "NAMESPACE",
            "description": "The OpenShift Namespace where the ImageStream resides."
        },
        {
            "name": "DATABASE_SERVICE_NAME",
            "value": "mongodb",
            "displayName": "Database Service Name",
            "required": true,
            "description": "The name of the OpenShift Service exposed for the database."
        },
        {
            "from": "user[A-Z0-9]{3}",
            "generate": "expression",
            "required": true,
            "description": "Username for MongoDB user that will be used for accessing the database.",
            "displayName": "MongoDB Connection Username",
            "name": "MONGODB_USER"
        },
        {
            "from": "[a-zA-Z0-9]{16}",
            "generate": "expression",
            "required": true,
            "description": "Password for the MongoDB connection user.",
            "displayName": "MongoDB Connection Password",
            "name": "MONGODB_PASSWORD"
        },
        {
            "name": "MONGODB_DATABASE",
            "value": "sampledb",
            "displayName": "MongoDB Database Name",
            "required": true,
            "description": "Name of the MongoDB database accessed."
        },
        {
            "from": "[a-zA-Z0-9]{16}",
            "generate": "expression",
            "required": true,
            "description": "Password for the database admin user.",
            "displayName": "MongoDB Admin Password",
            "name": "MONGODB_ADMIN_PASSWORD"
        },
        {
            "name": "MONGODB_VERSION",
            "value": "3.2",
            "displayName": "Version of MongoDB Image",
            "required": true,
            "description": "Version of MongoDB image to be used (2.4, 2.6, 3.2 or latest)."
        }
    ],
    "objects": [
        {
            "stringData": {
                "databaseAdminPassword": "${MONGODB_ADMIN_PASSWORD}",
                "databasePassword": "${MONGODB_PASSWORD}",
                "databaseUser": "${MONGODB_USER}"
            },
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}"
            }
        },
        {
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 27017,
                        "targetPort": 27017,
                        "nodePort": 0,
                        "name": "mongo"
                    }
                ],
                "type": "ClusterIP",
                "sessionAffinity": "None",
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                }
            },
            "kind": "Service",
            "status": {
                "loadBalancer": {}
            },
            "apiVersion": "v1",
            "metadata": {
                "creationTimestamp": null,
                "name": "${DATABASE_SERVICE_NAME}"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "from": {
                                "namespace": "${NAMESPACE}",
                                "kind": "ImageStreamTag",
                                "name": "mongodb:${MONGODB_VERSION}"
                            },
                            "containerNames": [
                                "mongodb"
                            ],
                            "lastTriggeredImage": "",
                            "automatic": true
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "template": {
                    "spec": {
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always",
                        "containers": [
                            {
                                "readinessProbe": {
                                    "initialDelaySeconds": 3,
                                    "timeoutSeconds": 1,
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-i",
                                            "-c",
                                            "mongo 127.0.0.1:27017/$MONGODB_DATABASE -u $MONGODB_USER -p $MONGODB_PASSWORD --eval=\"quit()\""
                                        ]
                                    }
                                },
                                "capabilities": {},
                                "imagePullPolicy": "IfNotPresent",
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/lib/mongodb/data",
                                        "name": "${DATABASE_SERVICE_NAME}-data"
                                    }
                                ],
                                "name": "mongodb",
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                },
                                "ports": [
                                    {
                                        "protocol": "TCP",
                                        "containerPort": 27017
                                    }
                                ],
                                "env": [
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databaseUser",
                                                "name": "${DATABASE_SERVICE_NAME}"
                                            }
                                        },
                                        "name": "MONGODB_USER"
                                    },
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databasePassword",
                                                "name": "${DATABASE_SERVICE_NAME}"
                                            }
                                        },
                                        "name": "MONGODB_PASSWORD"
                                    },
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databaseAdminPassword",
                                                "name": "${DATABASE_SERVICE_NAME}"
                                            }
                                        },
                                        "name": "MONGODB_ADMIN_PASSWORD"
                                    },
                                    {
                                        "value": "${MONGODB_DATABASE}",
                                        "name": "MONGODB_DATABASE"
                                    }
                                ],
                                "image": " ",
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 1,
                                    "tcpSocket": {
                                        "port": 27017
                                    }
                                },
                                "terminationMessagePath": "/dev/termination-log"
                            }
                        ],
                        "volumes": [
                            {
                                "emptyDir": {
                                    "medium": ""
                                },
                                "name": "${DATABASE_SERVICE_NAME}-data"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "${DATABASE_SERVICE_NAME}"
                        },
                        "creationTimestamp": null
                    }
                }
            },
            "kind": "DeploymentConfig",
            "status": {},
            "apiVersion": "v1",
            "metadata": {
                "creationTimestamp": null,
                "name": "${DATABASE_SERVICE_NAME}"
            }
        }
    ]
}