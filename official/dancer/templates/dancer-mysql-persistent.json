{
    "labels": {
        "template": "dancer-mysql-persistent"
    },
    "metadata": {
        "annotations": {
            "openshift.io/display-name": "Dancer + MySQL (Persistent)",
            "iconClass": "icon-perl",
            "tags": "quickstart,perl,dancer",
            "description": "An example Dancer application with a MySQL database. For more information about using this template, including OpenShift considerations, see https://github.com/openshift/dancer-ex/blob/master/README.md."
        },
        "name": "dancer-mysql-persistent"
    },
    "kind": "Template",
    "message": "The following service(s) have been created in your project: ${NAME}, ${DATABASE_SERVICE_NAME}.\n\nFor more information about using this template, including OpenShift considerations, see https://github.com/openshift/dancer-ex/blob/master/README.md.",
    "apiVersion": "v1",
    "parameters": [
        {
            "name": "NAME",
            "value": "dancer-mysql-persistent",
            "displayName": "Name",
            "required": true,
            "description": "The name assigned to all of the frontend objects defined in this template."
        },
        {
            "name": "NAMESPACE",
            "value": "openshift",
            "displayName": "Namespace",
            "required": true,
            "description": "The OpenShift Namespace where the ImageStream resides."
        },
        {
            "name": "MEMORY_LIMIT",
            "value": "512Mi",
            "displayName": "Memory Limit",
            "required": true,
            "description": "Maximum amount of memory the Perl Dancer container can use."
        },
        {
            "name": "MEMORY_MYSQL_LIMIT",
            "value": "512Mi",
            "displayName": "Memory Limit (MySQL)",
            "required": true,
            "description": "Maximum amount of memory the MySQL container can use."
        },
        {
            "name": "VOLUME_CAPACITY",
            "value": "1Gi",
            "displayName": "Volume Capacity",
            "required": true,
            "description": "Volume space available for data, e.g. 512Mi, 2Gi"
        },
        {
            "name": "SOURCE_REPOSITORY_URL",
            "value": "https://github.com/openshift/dancer-ex.git",
            "displayName": "Git Repository URL",
            "required": true,
            "description": "The URL of the repository with your application source code."
        },
        {
            "name": "SOURCE_REPOSITORY_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch."
        },
        {
            "name": "CONTEXT_DIR",
            "displayName": "Context Directory",
            "description": "Set this to the relative path to your project if it is not in the root of your repository."
        },
        {
            "value": "",
            "displayName": "Application Hostname",
            "name": "APPLICATION_DOMAIN",
            "description": "The exposed hostname that will route to the Dancer service, if left blank a value will be defaulted."
        },
        {
            "from": "[a-zA-Z0-9]{40}",
            "name": "GITHUB_WEBHOOK_SECRET",
            "displayName": "GitHub Webhook Secret",
            "generate": "expression",
            "description": "A secret string used to configure the GitHub webhook."
        },
        {
            "value": "database",
            "displayName": "Database Service Name",
            "name": "DATABASE_SERVICE_NAME",
            "required": true
        },
        {
            "from": "user[A-Z0-9]{3}",
            "displayName": "Database Username",
            "generate": "expression",
            "name": "DATABASE_USER"
        },
        {
            "from": "[a-zA-Z0-9]{8}",
            "displayName": "Database Password",
            "generate": "expression",
            "name": "DATABASE_PASSWORD"
        },
        {
            "value": "sampledb",
            "displayName": "Database Name",
            "name": "DATABASE_NAME",
            "required": true
        },
        {
            "value": "",
            "displayName": "Perl Module Reload",
            "name": "PERL_APACHE2_RELOAD",
            "description": "Set this to \"true\" to enable automatic reloading of modified Perl modules."
        },
        {
            "from": "[a-z0-9]{127}",
            "name": "SECRET_KEY_BASE",
            "displayName": "Secret Key",
            "generate": "expression",
            "description": "Your secret key for verifying the integrity of signed cookies."
        },
        {
            "value": "",
            "displayName": "Custom CPAN Mirror URL",
            "name": "CPAN_MIRROR",
            "description": "The custom CPAN mirror URL"
        }
    ],
    "objects": [
        {
            "stringData": {
                "databasePassword": "${DATABASE_PASSWORD}",
                "databaseUser": "${DATABASE_USER}"
            },
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "ports": [
                    {
                        "targetPort": 8080,
                        "port": 8080,
                        "name": "web"
                    }
                ],
                "selector": {
                    "name": "${NAME}"
                }
            },
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "service.alpha.openshift.io/dependencies": "[{\"name\": \"${DATABASE_SERVICE_NAME}\", \"kind\": \"Service\"}]",
                    "description": "Exposes and load balances the application pods"
                },
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "host": "${APPLICATION_DOMAIN}",
                "to": {
                    "kind": "Service",
                    "name": "${NAME}"
                }
            },
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Keeps track of changes in the application image"
                },
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "namespace": "${NAMESPACE}",
                            "kind": "ImageStreamTag",
                            "name": "perl:5.20"
                        },
                        "env": [
                            {
                                "value": "${CPAN_MIRROR}",
                                "name": "CPAN_MIRROR"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:latest"
                    }
                },
                "postCommit": {
                    "script": "perl -I extlib/lib/perl5 -I lib t/*"
                },
                "source": {
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir": "${CONTEXT_DIR}",
                    "type": "Git"
                },
                "triggers": [
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        }
                    }
                ]
            },
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to build the application"
                },
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "selector": {
                    "name": "${NAME}"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:latest"
                            },
                            "containerNames": [
                                "dancer-mysql-persistent"
                            ],
                            "automatic": true
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "template": {
                    "spec": {
                        "containers": [
                            {
                                "ports": [
                                    {
                                        "containerPort": 8080
                                    }
                                ],
                                "readinessProbe": {
                                    "initialDelaySeconds": 3,
                                    "timeoutSeconds": 3,
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8080
                                    }
                                },
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "value": "${DATABASE_SERVICE_NAME}",
                                        "name": "DATABASE_SERVICE_NAME"
                                    },
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databaseUser",
                                                "name": "${NAME}"
                                            }
                                        },
                                        "name": "MYSQL_USER"
                                    },
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databasePassword",
                                                "name": "${NAME}"
                                            }
                                        },
                                        "name": "MYSQL_PASSWORD"
                                    },
                                    {
                                        "value": "${DATABASE_NAME}",
                                        "name": "MYSQL_DATABASE"
                                    },
                                    {
                                        "value": "${SECRET_KEY_BASE}",
                                        "name": "SECRET_KEY_BASE"
                                    },
                                    {
                                        "value": "${PERL_APACHE2_RELOAD}",
                                        "name": "PERL_APACHE2_RELOAD"
                                    }
                                ],
                                "image": " ",
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 3,
                                    "httpGet": {
                                        "path": "/",
                                        "port": 8080
                                    }
                                },
                                "name": "dancer-mysql-persistent"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "${NAME}"
                        },
                        "name": "${NAME}"
                    }
                }
            },
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the application server"
                },
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            },
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}"
            }
        },
        {
            "spec": {
                "ports": [
                    {
                        "targetPort": 3306,
                        "port": 3306,
                        "name": "mysql"
                    }
                ],
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                }
            },
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Exposes the database server"
                },
                "name": "${DATABASE_SERVICE_NAME}"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "from": {
                                "namespace": "${NAMESPACE}",
                                "kind": "ImageStreamTag",
                                "name": "mysql:5.6"
                            },
                            "containerNames": [
                                "mysql"
                            ],
                            "automatic": true
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "template": {
                    "spec": {
                        "volumes": [
                            {
                                "persistentVolumeClaim": {
                                    "claimName": "${DATABASE_SERVICE_NAME}"
                                },
                                "name": "${DATABASE_SERVICE_NAME}-data"
                            }
                        ],
                        "containers": [
                            {
                                "ports": [
                                    {
                                        "containerPort": 3306
                                    }
                                ],
                                "readinessProbe": {
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 1,
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-i",
                                            "-c",
                                            "MYSQL_PWD='${DATABASE_PASSWORD}' mysql -h 127.0.0.1 -u ${DATABASE_USER} -D ${DATABASE_NAME} -e 'SELECT 1'"
                                        ]
                                    }
                                },
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_MYSQL_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databaseUser",
                                                "name": "${NAME}"
                                            }
                                        },
                                        "name": "MYSQL_USER"
                                    },
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databasePassword",
                                                "name": "${NAME}"
                                            }
                                        },
                                        "name": "MYSQL_PASSWORD"
                                    },
                                    {
                                        "value": "${DATABASE_NAME}",
                                        "name": "MYSQL_DATABASE"
                                    }
                                ],
                                "image": " ",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/lib/mysql/data",
                                        "name": "${DATABASE_SERVICE_NAME}-data"
                                    }
                                ],
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 1,
                                    "tcpSocket": {
                                        "port": 3306
                                    }
                                },
                                "name": "mysql"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "${DATABASE_SERVICE_NAME}"
                        },
                        "name": "${DATABASE_SERVICE_NAME}"
                    }
                }
            },
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the database"
                },
                "name": "${DATABASE_SERVICE_NAME}"
            }
        }
    ]
}