{
    "labels": {
        "template": "cakephp-mysql-example"
    },
    "metadata": {
        "annotations": {
            "openshift.io/display-name": "CakePHP + MySQL (Ephemeral)",
            "iconClass": "icon-php",
            "tags": "quickstart,php,cakephp",
            "description": "An example CakePHP application with a MySQL database. For more information about using this template, including OpenShift considerations, see https://github.com/openshift/cakephp-ex/blob/master/README.md.\n\nWARNING: Any data stored will be lost upon pod destruction. Only use this template for testing."
        },
        "name": "cakephp-mysql-example"
    },
    "kind": "Template",
    "message": "The following service(s) have been created in your project: ${NAME}, ${DATABASE_SERVICE_NAME}.\n\nFor more information about using this template, including OpenShift considerations, see https://github.com/openshift/cake-ex/blob/master/README.md.",
    "apiVersion": "v1",
    "parameters": [
        {
            "name": "NAME",
            "value": "cakephp-mysql-example",
            "displayName": "Name",
            "required": true,
            "description": "The name assigned to all of the frontend objects defined in this template."
        },
        {
            "name": "NAMESPACE",
            "value": "openshift",
            "displayName": "Namespace",
            "required": true,
            "description": "The OpenShift Namespace where the ImageStream resides."
        },
        {
            "name": "MEMORY_LIMIT",
            "value": "512Mi",
            "displayName": "Memory Limit",
            "required": true,
            "description": "Maximum amount of memory the CakePHP container can use."
        },
        {
            "name": "MEMORY_MYSQL_LIMIT",
            "value": "512Mi",
            "displayName": "Memory Limit (MySQL)",
            "required": true,
            "description": "Maximum amount of memory the MySQL container can use."
        },
        {
            "name": "SOURCE_REPOSITORY_URL",
            "value": "https://github.com/openshift/cakephp-ex.git",
            "displayName": "Git Repository URL",
            "required": true,
            "description": "The URL of the repository with your application source code."
        },
        {
            "name": "SOURCE_REPOSITORY_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch."
        },
        {
            "name": "CONTEXT_DIR",
            "displayName": "Context Directory",
            "description": "Set this to the relative path to your project if it is not in the root of your repository."
        },
        {
            "value": "",
            "displayName": "Application Hostname",
            "name": "APPLICATION_DOMAIN",
            "description": "The exposed hostname that will route to the CakePHP service, if left blank a value will be defaulted."
        },
        {
            "from": "[a-zA-Z0-9]{40}",
            "name": "GITHUB_WEBHOOK_SECRET",
            "displayName": "GitHub Webhook Secret",
            "generate": "expression",
            "description": "A secret string used to configure the GitHub webhook."
        },
        {
            "value": "mysql",
            "displayName": "Database Service Name",
            "name": "DATABASE_SERVICE_NAME",
            "required": true
        },
        {
            "name": "DATABASE_ENGINE",
            "value": "mysql",
            "displayName": "Database Engine",
            "required": true,
            "description": "Database engine: postgresql, mysql or sqlite (default)."
        },
        {
            "value": "default",
            "displayName": "Database Name",
            "name": "DATABASE_NAME",
            "required": true
        },
        {
            "value": "cakephp",
            "displayName": "Database User",
            "name": "DATABASE_USER",
            "required": true
        },
        {
            "from": "[a-zA-Z0-9]{16}",
            "displayName": "Database Password",
            "generate": "expression",
            "name": "DATABASE_PASSWORD"
        },
        {
            "from": "[\\w]{50}",
            "name": "CAKEPHP_SECRET_TOKEN",
            "displayName": "CakePHP secret token",
            "generate": "expression",
            "description": "Set this to a long random string."
        },
        {
            "from": "[a-zA-Z0-9]{40}",
            "name": "CAKEPHP_SECURITY_SALT",
            "displayName": "CakePHP Security Salt",
            "generate": "expression",
            "description": "Security salt for session hash."
        },
        {
            "from": "[0-9]{30}",
            "name": "CAKEPHP_SECURITY_CIPHER_SEED",
            "displayName": "CakePHP Security Cipher Seed",
            "generate": "expression",
            "description": "Security cipher seed for session hash."
        },
        {
            "value": "2",
            "displayName": "OPcache Revalidation Frequency",
            "name": "OPCACHE_REVALIDATE_FREQ",
            "description": "How often to check script timestamps for updates, in seconds. 0 will result in OPcache checking for updates on every request."
        },
        {
            "value": "",
            "displayName": "Custom Composer Mirror URL",
            "name": "COMPOSER_MIRROR",
            "description": "The custom Composer mirror URL"
        }
    ],
    "objects": [
        {
            "stringData": {
                "databasePassword": "${DATABASE_PASSWORD}",
                "databaseUser": "${DATABASE_USER}"
            },
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "ports": [
                    {
                        "targetPort": 8080,
                        "port": 8080,
                        "name": "web"
                    }
                ],
                "selector": {
                    "name": "${NAME}"
                }
            },
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "service.alpha.openshift.io/dependencies": "[{\"name\": \"${DATABASE_SERVICE_NAME}\", \"kind\": \"Service\"}]",
                    "description": "Exposes and load balances the application pods"
                },
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "host": "${APPLICATION_DOMAIN}",
                "to": {
                    "kind": "Service",
                    "name": "${NAME}"
                }
            },
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Keeps track of changes in the application image"
                },
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "namespace": "${NAMESPACE}",
                            "kind": "ImageStreamTag",
                            "name": "php:5.6"
                        },
                        "env": [
                            {
                                "value": "${COMPOSER_MIRROR}",
                                "name": "COMPOSER_MIRROR"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:latest"
                    }
                },
                "source": {
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir": "${CONTEXT_DIR}",
                    "type": "Git"
                },
                "triggers": [
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        }
                    }
                ]
            },
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to build the application"
                },
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "pre": {
                            "failurePolicy": "Retry",
                            "execNewPod": {
                                "command": [
                                    "./migrate-database.sh"
                                ],
                                "containerName": "cakephp-mysql-example"
                            }
                        }
                    }
                },
                "selector": {
                    "name": "${NAME}"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:latest"
                            },
                            "containerNames": [
                                "cakephp-mysql-example"
                            ],
                            "automatic": true
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "template": {
                    "spec": {
                        "containers": [
                            {
                                "ports": [
                                    {
                                        "containerPort": 8080
                                    }
                                ],
                                "readinessProbe": {
                                    "initialDelaySeconds": 3,
                                    "timeoutSeconds": 3,
                                    "httpGet": {
                                        "path": "/health.php",
                                        "port": 8080
                                    }
                                },
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "value": "${DATABASE_SERVICE_NAME}",
                                        "name": "DATABASE_SERVICE_NAME"
                                    },
                                    {
                                        "value": "${DATABASE_ENGINE}",
                                        "name": "DATABASE_ENGINE"
                                    },
                                    {
                                        "value": "${DATABASE_NAME}",
                                        "name": "DATABASE_NAME"
                                    },
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databaseUser",
                                                "name": "${NAME}"
                                            }
                                        },
                                        "name": "DATABASE_USER"
                                    },
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databasePassword",
                                                "name": "${NAME}"
                                            }
                                        },
                                        "name": "DATABASE_PASSWORD"
                                    },
                                    {
                                        "value": "${CAKEPHP_SECRET_TOKEN}",
                                        "name": "CAKEPHP_SECRET_TOKEN"
                                    },
                                    {
                                        "value": "${CAKEPHP_SECURITY_SALT}",
                                        "name": "CAKEPHP_SECURITY_SALT"
                                    },
                                    {
                                        "value": "${CAKEPHP_SECURITY_CIPHER_SEED}",
                                        "name": "CAKEPHP_SECURITY_CIPHER_SEED"
                                    },
                                    {
                                        "value": "${OPCACHE_REVALIDATE_FREQ}",
                                        "name": "OPCACHE_REVALIDATE_FREQ"
                                    }
                                ],
                                "image": " ",
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 3,
                                    "httpGet": {
                                        "path": "/",
                                        "port": 8080
                                    }
                                },
                                "name": "cakephp-mysql-example"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "${NAME}"
                        },
                        "name": "${NAME}"
                    }
                }
            },
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the application server"
                },
                "name": "${NAME}"
            }
        },
        {
            "spec": {
                "ports": [
                    {
                        "targetPort": 3306,
                        "port": 3306,
                        "name": "mysql"
                    }
                ],
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                }
            },
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Exposes the database server"
                },
                "name": "${DATABASE_SERVICE_NAME}"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "from": {
                                "namespace": "${NAMESPACE}",
                                "kind": "ImageStreamTag",
                                "name": "mysql:5.6"
                            },
                            "containerNames": [
                                "mysql"
                            ],
                            "automatic": true
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "template": {
                    "spec": {
                        "volumes": [
                            {
                                "emptyDir": {},
                                "name": "data"
                            }
                        ],
                        "containers": [
                            {
                                "ports": [
                                    {
                                        "containerPort": 3306
                                    }
                                ],
                                "readinessProbe": {
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 1,
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-i",
                                            "-c",
                                            "MYSQL_PWD='${DATABASE_PASSWORD}' mysql -h 127.0.0.1 -u ${DATABASE_USER} -D ${DATABASE_NAME} -e 'SELECT 1'"
                                        ]
                                    }
                                },
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_MYSQL_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databaseUser",
                                                "name": "${NAME}"
                                            }
                                        },
                                        "name": "MYSQL_USER"
                                    },
                                    {
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "databasePassword",
                                                "name": "${NAME}"
                                            }
                                        },
                                        "name": "MYSQL_PASSWORD"
                                    },
                                    {
                                        "value": "${DATABASE_NAME}",
                                        "name": "MYSQL_DATABASE"
                                    }
                                ],
                                "image": " ",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/lib/mysql/data",
                                        "name": "data"
                                    }
                                ],
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 1,
                                    "tcpSocket": {
                                        "port": 3306
                                    }
                                },
                                "name": "mysql"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "${DATABASE_SERVICE_NAME}"
                        },
                        "name": "${DATABASE_SERVICE_NAME}"
                    }
                }
            },
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the database"
                },
                "name": "${DATABASE_SERVICE_NAME}"
            }
        }
    ]
}