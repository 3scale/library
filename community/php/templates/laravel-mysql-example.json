{
    "labels": {
        "template": "laravel-mysql-example"
    },
    "metadata": {
        "annotations": {
            "openshift.io/display-name": "Laravel + MySQL (Persistent)",
            "iconClass": "icon-laravel",
            "tags": "quickstart,php,laravel",
            "description": "An example Laravel application with a MySQL database. For more information about using this template, including OpenShift considerations, see https://github.com/luciddreamz/laravel-ex/blob/master/readme.md."
        },
        "name": "laravel-mysql-example"
    },
    "kind": "Template",
    "message": "The following service(s) have been created in your project: laravel-mysql-example, ${DATABASE_SERVICE_NAME}.\n\nFor more information about using this template, including OpenShift considerations, see https://github.com/luciddreamz/laravel-ex/blob/master/readme.md.",
    "apiVersion": "v1",
    "parameters": [
        {
            "name": "SOURCE_REPOSITORY_URL",
            "value": "https://github.com/luciddreamz/laravel-ex.git",
            "displayName": "Git Repository URL",
            "required": true,
            "description": "The URL of the repository with your application source code."
        },
        {
            "name": "SOURCE_REPOSITORY_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch."
        },
        {
            "name": "LARAVEL_APP_ENV",
            "value": "development",
            "displayName": "Laravel Application Environment",
            "required": true,
            "description": "Determines the 'environment' your application is currently."
        },
        {
            "name": "LARAVEL_APP_DEBUG",
            "value": "true",
            "displayName": "Laravel Application Debug Mode",
            "required": true,
            "description": "Enable or disable detailed error messages."
        },
        {
            "value": "0",
            "displayName": "OPcache Revalidation Frequency",
            "name": "OPCACHE_REVALIDATE_FREQ",
            "description": "How often to check script timestamps for updates, in seconds. 0 will result in OPcache checking for updates on every request."
        },
        {
            "name": "CLUSTER_NAME",
            "value": "preview",
            "displayName": "Cluster Name",
            "required": true,
            "description": "The name of your current OpenShift cluster (console.CLUSTER_NAME.openshift.com)."
        },
        {
            "name": "ROUTER_SHARD",
            "value": "44fs",
            "displayName": "Router Shard",
            "required": true,
            "description": "The router shard used by routes in your current OpenShift cluster (http://PROJECT_NAME-APPLICATION_NAME.ROUTER_SHARD.CLUSTER_NAME.openshiftapps.com/)."
        },
        {
            "name": "MEMORY_LIMIT",
            "value": "512Mi",
            "displayName": "Memory Limit",
            "required": true,
            "description": "Maximum amount of memory the Laravel container can use."
        },
        {
            "name": "MEMORY_MYSQL_LIMIT",
            "value": "512Mi",
            "displayName": "Memory Limit (MySQL)",
            "required": true,
            "description": "Maximum amount of memory the MySQL container can use."
        },
        {
            "name": "VOLUME_CAPACITY",
            "value": "1Gi",
            "displayName": "Volume Capacity",
            "required": true,
            "description": "Volume space available for data, e.g. 512Mi, 2Gi"
        },
        {
            "name": "CONTEXT_DIR",
            "displayName": "Context Directory",
            "description": "Set this to the relative path to your project if it is not in the root of your repository."
        },
        {
            "value": "",
            "displayName": "Application Hostname",
            "name": "APPLICATION_DOMAIN",
            "description": "The exposed hostname that will route to the Laravel service, if left blank a value will be defaulted."
        },
        {
            "from": "[a-zA-Z0-9]{40}",
            "name": "GITHUB_WEBHOOK_SECRET",
            "displayName": "GitHub Webhook Secret",
            "generate": "expression",
            "description": "A secret string used to configure the GitHub webhook."
        },
        {
            "value": "mysql",
            "displayName": "Database Service Name",
            "name": "DATABASE_SERVICE_NAME",
            "required": true
        },
        {
            "name": "DATABASE_ENGINE",
            "value": "mysql",
            "displayName": "Database Engine",
            "required": true,
            "description": "Database engine: mysql (default), pgsql, or sqlite."
        },
        {
            "value": "default",
            "displayName": "Database Name",
            "name": "DATABASE_NAME",
            "required": true
        },
        {
            "value": "laravel",
            "displayName": "Database User",
            "name": "DATABASE_USER",
            "required": true
        },
        {
            "from": "[a-zA-Z0-9]{16}",
            "displayName": "Database Password",
            "generate": "expression",
            "name": "DATABASE_PASSWORD"
        },
        {
            "from": "[\\w]{32}",
            "name": "LARAVEL_APP_KEY",
            "displayName": "Laravel Encryption Key",
            "generate": "expression",
            "description": "Set this to a 32 character random string."
        }
    ],
    "objects": [
        {
            "spec": {
                "ports": [
                    {
                        "targetPort": 8080,
                        "port": 8080,
                        "name": "web"
                    }
                ],
                "selector": {
                    "name": "laravel-mysql-example"
                }
            },
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "service.alpha.openshift.io/dependencies": "[{\"name\": \"${DATABASE_SERVICE_NAME}\", \"kind\": \"Service\"}]",
                    "description": "Exposes and load balances the application pods"
                },
                "name": "laravel-mysql-example"
            }
        },
        {
            "spec": {
                "host": "${APPLICATION_DOMAIN}",
                "to": {
                    "kind": "Service",
                    "name": "laravel-mysql-example"
                }
            },
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "laravel-mysql-example"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Keeps track of changes in the application image"
                },
                "name": "laravel-mysql-example"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "namespace": "openshift",
                            "kind": "ImageStreamTag",
                            "name": "php:5.6"
                        },
                        "forcePull": true
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "laravel-mysql-example:latest"
                    }
                },
                "source": {
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir": "${CONTEXT_DIR}",
                    "type": "Git"
                },
                "triggers": [
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        }
                    }
                ]
            },
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to build the application"
                },
                "name": "laravel-mysql-example"
            }
        },
        {
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            },
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "recreateParams": {
                        "pre": {
                            "failurePolicy": "Retry",
                            "execNewPod": {
                                "command": [
                                    "./migrate-database.sh"
                                ],
                                "containerName": "laravel-mysql-example"
                            }
                        }
                    }
                },
                "selector": {
                    "name": "laravel-mysql-example"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "laravel-mysql-example:latest"
                            },
                            "containerNames": [
                                "laravel-mysql-example"
                            ],
                            "automatic": true
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "template": {
                    "spec": {
                        "containers": [
                            {
                                "ports": [
                                    {
                                        "containerPort": 8080
                                    }
                                ],
                                "readinessProbe": {
                                    "initialDelaySeconds": 3,
                                    "timeoutSeconds": 3,
                                    "httpGet": {
                                        "path": "/health.php",
                                        "port": 8080
                                    }
                                },
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "value": "${CLUSTER_NAME}",
                                        "name": "CLUSTER_NAME"
                                    },
                                    {
                                        "value": "${ROUTER_SHARD}",
                                        "name": "ROUTER_SHARD"
                                    },
                                    {
                                        "value": "${DATABASE_SERVICE_NAME}",
                                        "name": "DB_SERVICE_NAME"
                                    },
                                    {
                                        "value": "${DATABASE_ENGINE}",
                                        "name": "DB_CONNECTION"
                                    },
                                    {
                                        "value": "${DATABASE_NAME}",
                                        "name": "DB_DATABASE"
                                    },
                                    {
                                        "value": "${DATABASE_USER}",
                                        "name": "DB_USERNAME"
                                    },
                                    {
                                        "value": "${DATABASE_PASSWORD}",
                                        "name": "DB_PASSWORD"
                                    },
                                    {
                                        "value": "${LARAVEL_APP_KEY}",
                                        "name": "APP_KEY"
                                    },
                                    {
                                        "value": "${LARAVEL_APP_ENV}",
                                        "name": "APP_ENV"
                                    },
                                    {
                                        "value": "${LARAVEL_APP_DEBUG}",
                                        "name": "APP_DEBUG"
                                    },
                                    {
                                        "value": "${OPCACHE_REVALIDATE_FREQ}",
                                        "name": "OPCACHE_REVALIDATE_FREQ"
                                    }
                                ],
                                "image": "laravel-mysql-example",
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 3,
                                    "httpGet": {
                                        "path": "/",
                                        "port": 8080
                                    }
                                },
                                "name": "laravel-mysql-example"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "laravel-mysql-example"
                        },
                        "name": "laravel-mysql-example"
                    }
                }
            },
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the application server"
                },
                "name": "laravel-mysql-example"
            }
        },
        {
            "spec": {
                "ports": [
                    {
                        "targetPort": 3306,
                        "port": 3306,
                        "name": "mysql"
                    }
                ],
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                }
            },
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Exposes the database server"
                },
                "name": "${DATABASE_SERVICE_NAME}"
            }
        },
        {
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "from": {
                                "namespace": "openshift",
                                "kind": "ImageStreamTag",
                                "name": "mysql:5.6"
                            },
                            "containerNames": [
                                "mysql"
                            ],
                            "automatic": true
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "template": {
                    "spec": {
                        "containers": [
                            {
                                "ports": [
                                    {
                                        "containerPort": 3306
                                    }
                                ],
                                "readinessProbe": {
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 1,
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-i",
                                            "-c",
                                            "MYSQL_PWD='${DATABASE_PASSWORD}' mysql -h 127.0.0.1 -u ${DATABASE_USER} -D ${DATABASE_NAME} -e 'SELECT 1'"
                                        ]
                                    }
                                },
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_MYSQL_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "value": "${DATABASE_USER}",
                                        "name": "MYSQL_USER"
                                    },
                                    {
                                        "value": "${DATABASE_PASSWORD}",
                                        "name": "MYSQL_PASSWORD"
                                    },
                                    {
                                        "value": "${DATABASE_NAME}",
                                        "name": "MYSQL_DATABASE"
                                    }
                                ],
                                "image": "mysql",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/lib/mysql/data",
                                        "name": "${DATABASE_SERVICE_NAME}-data"
                                    }
                                ],
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 1,
                                    "tcpSocket": {
                                        "port": 3306
                                    }
                                },
                                "name": "mysql"
                            }
                        ],
                        "volumes": [
                            {
                                "persistentVolumeClaim": {
                                    "claimName": "${DATABASE_SERVICE_NAME}"
                                },
                                "name": "${DATABASE_SERVICE_NAME}-data"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "${DATABASE_SERVICE_NAME}"
                        },
                        "name": "${DATABASE_SERVICE_NAME}"
                    }
                }
            },
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the database"
                },
                "name": "${DATABASE_SERVICE_NAME}"
            }
        }
    ]
}